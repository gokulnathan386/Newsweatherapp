<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NewsScreenActivity">

   <LinearLayout
       android:id="@+id/searchRestaurantCuisine"
       android:background="@drawable/newsearch"
       android:weightSum="4"
       android:layout_marginHorizontal="15dp"
       android:layout_marginVertical="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">



      <EditText
          android:padding="13dp"
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@null"
          android:inputType="textVisiblePassword|textCapCharacters"
          android:maxLength="10"
          android:text=""
          android:drawablePadding="5dp"
          android:drawableLeft="@drawable/search_icon"
          android:singleLine="true"
          android:layout_marginLeft="5dp"
          android:textColor="#A0A0A0"
          android:textColorHint="#909497"
          android:hint="Search Title"
          android:textSize="12dp" />

      <TextView
          android:id="@+id/invalide_postcode"
          android:layout_marginLeft="-110dp"
          android:text="Invalid  Postcode"
          android:textColor="#D02F3E"
          android:textSize="10dp"
          android:padding="15dp"
          android:textStyle="bold"
          android:visibility="gone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
      </TextView>


   </LinearLayout>

   <androidx.recyclerview.widget.RecyclerView
       android:layout_below="@+id/searchRestaurantCuisine"
       android:id="@+id/newsListRecyclerView"
       android:layout_width="match_parent"
       tools:listitem="@layout/newsdesign"
       android:layout_height="match_parent">
   </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>